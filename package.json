{
  "name": "wr-audit-logger",
  "version": "0.0.1",
  "description": "Automatic audit logging for PostgreSQL",
  "keywords": [],
  "license": "ISC",
  "author": "White Room",
  "repository": {
    "type": "git",
    "url": ""
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "type": "module",
  "main": "dist/index.cjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsdown",
    "ci": "pnpm run build && pnpm run format:check && pnpm run typecheck && pnpm run test",
    "coverage": "vitest run --coverage",
    "dev": "tsdown --watch",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "local-release": "changeset version && changeset publish",
    "prepare": "husky",
    "prepublishOnly": "npm run ci",
    "test": "vitest run",
    "test:batch": "dotenvx run -- tsx scripts/batch.ts",
    "test:full-flow": "dotenvx run -- tsx scripts/test-full-flow.ts",
    "test:integration": "dotenvx run -- vitest run tests/integration",
    "test:unit": "vitest run tests/unit",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@dotenvx/dotenvx": "^1.52.0",
    "@types/node": "^25.1.0",
    "@types/pg": "^8.16.0",
    "@vitest/ui": "^4.0.18",
    "drizzle-kit": "^0.31.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.27.0",
    "oxlint": "^1.42.0",
    "oxlint-tsgolint": "^0.11.3",
    "tsdown": "^0.20.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "drizzle-orm": "^0.45.1",
    "pg": "^8.17.2"
  },
  "peerDependenciesMeta": {
    "pg": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=24",
    "pnpm": ">=10.28.2"
  },
  "packageManager": "pnpm@10.28.2"
}
